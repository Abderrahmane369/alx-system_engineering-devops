#!/usr/bin/env bash
#TRANSFERISATION OF A FILE TO A SERVER WITH SSH KEY AND WITHOUT PASSWORD PROMPT ON THE SERVER SIDE AND WITHOUT USER INTERACTION ON THE CLIENT SIDE (LOCAL MACHINE)

if [ $# -eq 1 ]
then
    echo "Usage: 0-transfer_file PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
fi

scp -o StrictHostKeyChecking=no -i "$4" "$1" "$3@$2:~/"
