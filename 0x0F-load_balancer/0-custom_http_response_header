#!/bin/bash

sudo rm -f /etc/nginx/sites-available/default

# Create a new nginx server block with the hostname in the header
sh -c 'echo "server {
    listen 80;
    server_name localhost;

    location / {
        root /var/www/html;
        index index.html;
        add_header X-Served-By $(hostname);
        autoindex on;
    }
}" | sudo tee /etc/nginx/sites-available/default'

# Enable the new server block by creating a symbolic link to it in the sites-enabled directory
sudo service nginx restart
